<!-- For Students Info Form -->

<div class="container my-5 student-form">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <a class="btn btn-sm btn-primary" href="/students">Back</a>
            <br>
            <br>
            <div class="card shadow">
                <div class="card-header">
                    <h2>Add New Student</h2>
                </div>
                <div class="card-body">
                    
                    <form action="/students/create" method="POST" enctype="multipart/form-data">
                        <div class="my-3">
                            <label for="">Name</label>
                            <input name="name" type="text" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Email</label>
                            <input name="email" type="text" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Cell</label>
                            <input name="cell" type="text" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Cell</label>
                            <select name="location"  name="" id="" class="form-control">
                                <option value="">--Select--</option>
                                <option value="Mirpur">Mirpur</option>
                                <option value="Shahajadpur">Shahajadpur</option>
                                <option value="Dhanmondi">Dhanmondi</option>
                                <option value="Gulshan">Gulshan</option>
                                <option value="Badda">Badda</option>
                            </select>
                        </div>
                        <div class="my-3">
                                <h6><label for="">Upload Your Photo</label></h6>
                                <br>
                                <img class="preload-student" src="" alt="">
                                <br>
                                <label for="upload_student_photo">
                                    <img src="http://simpleicon.com/wp-content/uploads/cloud-upload-1.png" alt="">
                                </label>
                                <input name="student-photo" type="file" class="" id="upload_student_photo">
                        </div>
                        <div class="my-3">
                                <input type="submit" class="btn btn-sm btn-primary w-100" value="Create">
                        </div>
                        
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>